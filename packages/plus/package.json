{
  "name": "@ultraviolet/plus",
  "version": "0.28.3",
  "description": "Ultraviolet Plus",
  "homepage": "https://github.com/scaleway/ultraviolet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scaleway/ultraviolet.git",
    "directory": "packages/plus"
  },
  "scripts": {
    "type:generate": "tsc --declaration -p tsconfig.build.json",
    "watch": "pnpm run '/^watch:.*/'",
    "watch:build": "vite build --config vite.config.ts --watch",
    "build": "vite build --config vite.config.ts && pnpm run type:generate",
    "build:profile": "npx vite-bundle-visualizer -c vite.config.ts",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "test:unit": "LC_ALL=en_US.UTF-8  pnpm vitest --run --config vite.config.ts",
    "test:unit:coverage": "pnpm test:unit --coverage",
    "lintpublish": "publint"
  },
  "keywords": [
    "react",
    "reactjs",
    "ui"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.x",
    "pnpm": ">=9.x"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "sideEffects": false,
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "size-limit": [
    {
      "path": [
        "dist/**/*.js",
        "!*.d.ts",
        "!*.cjs"
      ],
      "limit": "500 kB",
      "webpack": false,
      "brotli": true,
      "running": false
    }
  ],
  "peerDependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.0",
    "react": "18.x || 19.x",
    "react-dom": "18.x || 19.x"
  },
  "devDependencies": {
    "@babel/core": "7.27.1",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.0",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.3",
    "@ultraviolet/illustrations": "workspace:*",
    "@utils/test": "workspace:*",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "dependencies": {
    "@uiw/codemirror-extensions-langs": "4.23.12",
    "@uiw/codemirror-theme-material": "4.23.12",
    "@uiw/react-codemirror": "4.23.12",
    "@ultraviolet/icons": "workspace:*",
    "@ultraviolet/themes": "workspace:*",
    "@ultraviolet/ui": "workspace:*",
    "react-intersection-observer": "9.16.0"
  }
}
