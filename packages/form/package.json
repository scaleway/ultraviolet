{
  "name": "@ultraviolet/form",
  "version": "5.0.1",
  "description": "Ultraviolet Form",
  "homepage": "https://github.com/scaleway/ultraviolet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scaleway/ultraviolet.git",
    "directory": "packages/form"
  },
  "scripts": {
    "build:profile": "npx vite-bundle-visualizer -c vite.config.ts",
    "build": "vite build --config vite.config.ts && pnpm run type:generate",
    "size": "size-limit",
    "test:unit:coverage": "pnpm test:unit --coverage",
    "test:unit": "LC_ALL=en_US.UTF-8 pnpm vitest --run --config vite.config.ts",
    "type:generate": "tsc --declaration -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "watch:build": "vite build --config vite.config.ts --watch",
    "watch": "pnpm run '/^watch:.*/'",
    "lintpublish": "publint"
  },
  "keywords": [
    "react",
    "reactjs",
    "ui"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.x",
    "pnpm": ">=9.x"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "sideEffects": false,
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "size-limit": [
    {
      "path": [
        "dist/**/*.js",
        "!*.d.ts",
        "!*.cjs"
      ],
      "limit": "50 kB",
      "webpack": false,
      "brotli": true,
      "running": false
    }
  ],
  "peerDependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@ultraviolet/ui": "workspace:*",
    "react": "18.x || 19.x",
    "react-dom": "18.x || 19.x"
  },
  "devDependencies": {
    "@babel/core": "7.28.3",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@types/final-form-focus": "1.1.7",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@ultraviolet/ui": "workspace:*",
    "@utils/test": "workspace:*",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "dependencies": {
    "@babel/runtime": "7.28.3",
    "@ultraviolet/icons": "workspace:*",
    "@ultraviolet/themes": "workspace:*",
    "react-hook-form": "7.55.0"
  }
}
