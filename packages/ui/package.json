{
  "name": "@ultraviolet/ui",
  "version": "3.8.2",
  "description": "Ultraviolet UI",
  "homepage": "https://github.com/scaleway/ultraviolet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scaleway/ultraviolet.git",
    "directory": "packages/ui"
  },
  "scripts": {
    "type:generate": "tsc --declaration -p tsconfig.build.json",
    "watch": "pnpm run '/^watch:.*/'",
    "watch:build": "vite build --config vite.config.ts --watch",
    "build": "vite build --config vite.config.ts && pnpm run type:generate",
    "build:profile": "npx vite-bundle-visualizer -c vite.config.ts",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "test:unit": "LC_ALL=en_US.UTF-8  pnpm vitest --run --config vitest.config.ts",
    "test:watch": "LC_ALL=en_US.UTF-8  pnpm vitest watch --config vitest.config.ts",
    "test:unit:coverage": "pnpm test:unit --coverage",
    "lintpublish": "publint"
  },
  "keywords": [
    "react",
    "reactjs",
    "ui"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.x",
    "pnpm": ">=9.x"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.css.ts"
  ],
  "type": "module",
  "files": [
    "dist/"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles": "./dist/ui.css",
    "./compositions/*": {
      "types": "./dist/components/compositions/*/index.d.ts",
      "import": "./dist/components/compositions/*/index.js",
      "require": "./dist/components/compositions/*/index.js",
      "default": "./dist/components/compositions/*/index.js"
    }
  },
  "size-limit": [
    {
      "path": [
        "dist/**/*.js",
        "!*.d.ts",
        "!*.cjs"
      ],
      "limit": "800 kB",
      "webpack": false,
      "brotli": true,
      "running": false
    }
  ],
  "peerDependencies": {
    "react": "18.x || 19.x",
    "react-dom": "18.x || 19.x"
  },
  "devDependencies": {
    "@babel/core": "7.29.0",
    "@repo/config": "workspace:*",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@utils/test": "workspace:*",
    "@vanilla-extract/vite-plugin": "5.1.1",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "dependencies": {
    "@nivo/bar": "0.89.1",
    "@nivo/core": "0.89.1",
    "@nivo/line": "0.89.1",
    "@nivo/pie": "0.89.1",
    "@nivo/scales": "0.89.0",
    "@nivo/treemap": "0.89.1",
    "@scaleway/fuzzy-search": "1.0.1",
    "@scaleway/random-name": "5.1.3",
    "@scaleway/use-media": "3.0.5",
    "@ultraviolet/icons": "workspace:*",
    "@ultraviolet/themes": "workspace:*",
    "@ultraviolet/utils": "workspace:*",
    "@vanilla-extract/css": "1.17.4",
    "@vanilla-extract/dynamic": "2.1.5",
    "@vanilla-extract/recipes": "0.5.7",
    "@vanilla-extract/sprinkles": "1.6.5",
    "csstype": "3.2.3",
    "deepmerge": "4.3.1",
    "react-toastify": "11.0.5",
    "react-use-clipboard": "1.0.9"
  }
}
