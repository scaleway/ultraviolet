{
  "name": "@ultraviolet/ui",
  "version": "2.0.6",
  "description": "Ultraviolet UI",
  "homepage": "https://github.com/scaleway/ultraviolet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scaleway/ultraviolet.git",
    "directory": "packages/ui"
  },
  "scripts": {
    "type:generate": "tsc --declaration -p tsconfig.build.json",
    "watch": "pnpm run '/^watch:.*/'",
    "watch:build": "vite build --config vite.config.ts --watch",
    "build": "vite build --config vite.config.ts && pnpm run type:generate",
    "build:profile": "npx vite-bundle-visualizer -c vite.config.ts",
    "typecheck": "tsc --noEmit",
    "size": "size-limit",
    "test:unit": "LC_ALL=en_US.UTF-8  pnpm vitest --run --config vite.config.ts",
    "test:unit:coverage": "pnpm test:unit --coverage",
    "lintpublish": "publint"
  },
  "keywords": [
    "react",
    "reactjs",
    "ui"
  ],
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.x",
    "pnpm": ">=9.x"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "sideEffects": false,
  "type": "module",
  "files": [
    "dist/"
  ],
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "size-limit": [
    {
      "path": [
        "dist/**/*.js",
        "!*.d.ts",
        "!*.cjs"
      ],
      "limit": "800 kB",
      "webpack": false,
      "brotli": true,
      "running": false
    }
  ],
  "peerDependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "react": "18.x || 19.x",
    "react-dom": "18.x || 19.x"
  },
  "devDependencies": {
    "@babel/core": "7.28.0",
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@utils/test": "workspace:*",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "dependencies": {
    "@emotion/serialize": "1.3.3",
    "@nivo/bar": "0.89.1",
    "@nivo/core": "0.89.1",
    "@nivo/line": "0.89.1",
    "@nivo/pie": "0.89.1",
    "@nivo/scales": "0.89.0",
    "@scaleway/random-name": "5.1.2",
    "@scaleway/use-media": "3.0.4",
    "@ultraviolet/icons": "workspace:*",
    "@ultraviolet/themes": "workspace:*",
    "deepmerge": "4.3.1",
    "react-toastify": "11.0.5",
    "react-use-clipboard": "1.0.9"
  }
}
