    "rollup": "3.28.1",
    "rollup-plugin-dts": "6.0.1",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-visualizer": "5.9.2",
    "seedrandom": "3.0.5",
    "shx": "0.3.4",
    "size-limit": "8.2.6",
    "storybook": "7.4.0",
    "storybook-dark-mode": "3.0.1",
    "timekeeper": "2.3.1",
    "typescript": "5.2.2",
    "webpack": "5.88.2",
    "zxcvbn": "4.4.2"
  }
}
